{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@common": ["framework/common"],
      "@encryption": ["framework/graphql/management/utils/encryption"],
      "@encryption/*": ["framework/graphql/management/utils/encryption/*"],
      "@common/*": ["framework/common/*"],
      "@framework": ["framework/graphql"],
      "@framework/*": ["framework/graphql/*"],
      "@components": ["components"],
      "@components/*": ["components/*"],
      "@lib": ["lib"],
      "@lib/*": ["lib/*"],
      "@src": ["src"],
      "@src/*": ["src/*"],
      "@images": ["public/images"],
      "@images/*": ["public/images/*"],
      "@styles": ["styles"],
      "@styles/*": ["styles/*"],
      "@/*": ["./*"],
      "@root": ["."],
      "@root/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "components/ui/StyledPhoneInput/StyledPhoneInput-tsx.exc"
  ],
  "exclude": [
    "public",
    "node_modules",
    ".history",
    ".git",
    ".next",
    "html-archives"
  ]
}
